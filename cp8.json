{
  "openapi": "3.0.0",
  "info": {
    "title": "Swagger Example CP 8",
    "version": "1"
  },
  "servers": [
    {
      "url": "http://localhost:3030"
    },
    {
      "url": "www.pokeapi.com"
    }
  ],
  "paths": {
    "/user": {
      "parameters": [
        {
          "in": "query",
          "name": "name",
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "responses": {
          "200": {
            "description": "Return user value successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 5
                    },
                    "name": {
                      "type": "string",
                      "example": "Farhan"
                    },
                    "job": {
                      "type": "string",
                      "example": "Engineer"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User not found"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 5
                    },
                    "name": {
                      "type": "string",
                      "example": "Farhan"
                    },
                    "job": {
                      "type": "string",
                      "example": "Engineer"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Farhan"
                  },
                  "job": {
                    "type": "string",
                    "example": "Engineer"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "put": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "id of the user",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "User edited successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 5
                    },
                    "name": {
                      "type": "string",
                      "example": "Farhan"
                    },
                    "job": {
                      "type": "string",
                      "example": "Engineer"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Farhan"
                  },
                  "job": {
                    "type": "string",
                    "example": "Engineer"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
